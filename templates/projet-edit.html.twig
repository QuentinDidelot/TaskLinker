{% extends 'base.html.twig' %}

{% block title %} {{projet.nom}} | TaskLinker {% endblock %}

{% block body %}
    {% include 'nav.html.twig' %}
<main>
    <header>
        <div id="current-user"></div>
        <div id="title-page">
            <h1>{{ projet.nom }}</h1>
        </div>
    </header>
    <div id="content">
        {{ form_start(form) }}

        {{ form_row(form.nom) }}

        {{ form_row(form.employes) }}

        </br>
        <button type="submit" class="button button-submit">Modifier</button>

        {{ form_end(form) }}
    </div>
</main>
{% endblock %}
