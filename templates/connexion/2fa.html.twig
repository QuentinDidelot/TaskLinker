{% extends 'connexion/base-logout.html.twig' %}

{% block body %}

<h1>Confirmez votre connexion</h1>

<form action="{{ path('2fa_login_check') }}" method="POST">
    <p>Scannez le QR Code avec l'application Google Auth et entrez le code :</p>
    <p class="form_qrcode">
        <img src="{{ path('2fa_qrcode' ) }}" alt="" class="qrcode" />
    </p>
    <div>
        <label for="_auth_code">Code Google Auth :</label>
        <input type="text" name="_auth_code" id="_auth_code" />
    </div>
    <button class="button button-submit">Se connecter</button><br />
    <a class="button button-submit" href="{{ path('app_logout') }}">Se d√©connecter</a>
</form>
{% endblock %}