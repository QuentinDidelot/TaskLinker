{% extends 'base.html.twig' %}

{% block body %}
   
         <main>
            <header>
               <div id="current-user"></div>
               <div id="title-page">
                  <h1>Projets</h1>
               </div>
            </header>
            <div id="content">
               <div id="projects-container">
                    {% for projet in projets %}
                        <article class="card-project">
                            <a href="{{path('app_project_details', {id:projet.id})}}">
                                <h2>{{projet.nom}}</h2>
                            </a>
                            <div class="card-project-icons">
                                <a href="{{path('app_project_edit', {id:projet.id}) }}"><i class="fa-solid fa-pen"></i></a>
                                <a href="{{path('app_project_delete', {id:projet.id}) }}" onclick="javascript : return confirm('Êtes-vous sûr de vouloir archiver ce projet ?')"><i class="fa-solid fa-trash"></i></a>
                            </div>
                        </article>                       
                    {% endfor %}
                  <article class="card-project">
                     <a href="{{path('app_project_add')}} ">
                        <i class="fa-solid fa-circle-plus add-project-icon"></i>
                        <h2>Ajouter un projet</h2>
                     </a>
                  </article>
               </div>
            </div>
         </main>
  </div>
{% endblock %}
