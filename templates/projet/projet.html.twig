{% extends 'base.html.twig' %}

{% block title %}{{ projet.nom }} | TaskLinker{% endblock %}

{% block body %}

   <main>
      <header>
         <div id="current-user"></div>
         <div id="title-page">
            <div class="flex-header">
               <h1>{{ projet.nom }}</h1>
               <div class="user-list">
                  {% for employe in projet.employes %}
                     <div class="avatar">{{ employe.getInitiales() }}</div>
                  {% endfor %}
               </div>
               <a class="button" href="{{ path('app_project_edit', { id: projet.id }) }}">Modifier</a>
            </div>
         </div>
      </header>
      <div id="content">
         <div id="tasks-container">
            {% for status in ['To do', 'Doing', 'Done'] %}
               <div class="task-column">
                  <h2>{{ status }}</h2>
                  <div class="tasks-list">
                     {% for tache in tachesParStatut[status] %}
                        <a class="task" href="{{ path('app_tache_detail', { id: tache.id }) }}">
                           <h3>{{ tache.titre }}</h3>
                           <p>{{ tache.description }}</p>
                           <div class="task-infos">
                              <div class="task-deadline">
                                 <i class="fa-regular fa-calendar"></i> {{ tache.deadline|date('d/m/Y') }}
                              </div>
                              {% if tache.employe is not null %}
                                 <div class="mini-user">
                                    {{ tache.employe.getInitiales() }}
                                 </div>
                              {% endif %}
                           </div>
                        </a>
                     {% endfor %}
                     <a href="{{ path('app_tache_add', { projetId: projet.id }) }}" class="task-add">
                        + Ajouter une t√¢che
                     </a>
                  </div>
               </div>
            {% endfor %}
         </div>
      </div>
   </main>
{% endblock %}
